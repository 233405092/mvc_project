@{
	Layout = null;
}
@model mvc_project.Models.Allinfo_Model;


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Para Transferi</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --primary-color: #5d56f9;
            --secondary-color: #6a63f8;
            --background-light: #f4f7f6;
            --background-dark: #e8eaf6;
            --text-color: #333;
            --card-bg: #fff;
            --shadow-color: rgba(0, 0, 0, 0.1);
            --border-radius: 12px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--background-dark);
            color: var(--text-color);
            line-height: 1.6;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header */
        header {
            background-color: var(--card-bg);
            box-shadow: 0 2px 10px var(--shadow-color);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 5%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .logo a {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
            text-decoration: none;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

            .user-info .user-name {
                font-weight: 600;
                color: #555;
            }

            .user-info .logout-btn {
                background-color: transparent;
                color: var(--primary-color);
                border: 1px solid var(--primary-color);
                padding: 0.5rem 1rem;
                border-radius: 5px;
                font-weight: 600;
                text-decoration: none;
                transition: all 0.3s ease;
            }

                .user-info .logout-btn:hover {
                    background-color: var(--primary-color);
                    color: white;
                }

        /* Main Content */
        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 5%;
            flex: 1;
        }

        .transfer-card {
            background-color: var(--card-bg);
            padding: 3rem;
            border-radius: var(--border-radius);
            box-shadow: 0 5px 20px var(--shadow-color);
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            animation: fadeIn 1s ease-in-out;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .transfer-card h2 {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--primary-color);
            text-align: center;
        }

        .transfer-card p {
            text-align: center;
            margin-bottom: 2rem;
            color: #777;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                font-weight: 600;
                margin-bottom: 8px;
                color: #555;
            }

            .form-group input, .form-group textarea {
                width: 100%;
                padding: 12px 15px;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 1rem;
                transition: border-color 0.3s, box-shadow 0.3s;
            }

                .form-group input:focus, .form-group textarea:focus {
                    outline: none;
                    border-color: var(--primary-color);
                    box-shadow: 0 0 0 3px rgba(93, 86, 249, 0.2);
                }

            .form-group textarea {
                resize: vertical;
                height: 100px;
            }

        .transfer-btn {
            width: 100%;
            padding: 15px;
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s, transform 0.3s;
        }

            .transfer-btn:hover {
                background: var(--secondary-color);
                transform: translateY(-2px);
            }

            .transfer-btn:active {
                transform: translateY(0);
            }

        .info-box {
            background-color: var(--background-light);
            border-left: 5px solid var(--primary-color);
            padding: 1rem;
            margin-top: 2rem;
            border-radius: 5px;
        }

            .info-box p {
                text-align: left;
                margin: 0;
                color: #555;
                font-size: 0.9rem;
            }

        /* Footer */
        footer {
            background-color: var(--text-color);
            color: white;
            padding: 1.5rem 5%;
            text-align: center;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <a href="#">Banka Adı</a>
            </div>
            <div class="user-info">
                <span class="user-name">Merhaba, @Model.Namesurname</span>
                <a href="/Index/Index" class="logout-btn">Geri dön</a>
            </div>
        </nav>
    </header>

    <main class="container">
        <div class="transfer-card">
            <h2>Para Transferi</h2>
            <p>IBAN ile kolayca para gönderin.</p>
            <form >
                <div class="form-group">
                    <label for="iban">Alıcının IBAN'ı</label>
                    <input type="text" id="iban" placeholder="TR00 0000 0000 0000 0000 0000 00" required>
                </div>
                <div class="form-group">
                    <label for="amount">Gönderilecek Tutar</label>
                    <input type="number" id="amount" placeholder="100,00 TL" required>
                </div>
                <div class="form-group">
                    <label for="description">Açıklama (isteğe bağlı)</label>
                    <textarea id="description" placeholder="Açıklama yazınız..."></textarea>
                </div>
                <button type="submit" class="transfer-btn">Transferi Gerçekleştir</button>
            </form>
            <div class="info-box">
                <p>Transfer işlemini tamamlamadan önce alıcı bilgilerini ve tutarı kontrol ettiğinizden emin olun.</p>
            </div>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 Banka Adı. Tüm Hakları Saklıdır.</p>
    </footer>
</body>
</html>